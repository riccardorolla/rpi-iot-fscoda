  \+ exam_view_hw(Exam, Hardware).
physician_can_view_exam(Physician, Exam) :-
  physician_has_hw(Physician, Hardware),
  exam_view_hw(Exam, Hardware).

device_can_display_exam(Device, Exam) :-
  device_has_caps(Device, Capability),
  exam_view_caps(Exam, Capability).


