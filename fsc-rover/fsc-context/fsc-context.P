% facts

usrcmd(UserCmd,Cmd) :- usrcmd_(UserCmd,Cmd).
cmddesc(Cmd,Desc) :- cmddesc_(Cmd,Desc).

request(Id,Cmd) :- request_(Id,Cmd).
result(Cmd,Out) :- result_(Cmd,Out).


action(Obj,Status,Cmd) :- action_(Obj,Status,Cmd).
 
confidence(Obj,Min,Max) :- confidence_(Obj,Min,Max).
recognition(Obj,Value):- recognition_(Obj,Value).

